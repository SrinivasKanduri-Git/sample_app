<h1> Registered users </h1>

<table>
    <thead>
        <tr>
            <th>User name</th>
            <th>Email</th>
            <th colspan="3">action</th>
        </tr>
    </thead>

    <tbody>
        <%@users.each do |user|%>
            <tr>
                <td><%=user.user_name%></td>
                <td><%=user.email%></td>
                <td>
                    <%=link_to "view", user%>
                    <%=link_to "edit", edit_user_path(user)%>
                    <%=link_to "delete", user, data: { turbo_method: :delete, 
                    turbo_confirm: "Alert!: You are deleting user: #{user.user_name}, please confirm"}%>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>
<br><strong><%=link_to "New user", new_user_path%></strong> 